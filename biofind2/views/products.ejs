<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<script type='text/javascript' src='/faye/client.js'></script>
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> BIO FIND</h1>
		
		<a href="/products" class="btn btn-default">Products</a>
		<a href="/markets" class="btn btn-default">Markets</a>
		<a href="/logout" class="btn btn-default"> Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Products</h3>

					<table>
						<thead>
							<tr>
								<th>Name</th>
								<th>Price</th>
								<th>Category</th>
								<th>Market</th>
							</tr>
						</thead>
						<tbody>
							<% products.forEach(function(product) { %>
								<tr>
									<td><a href="/products/<%= product._id %>"><%= product.name %></a></td>
									<td><%= product.price %></td>
									<td><%= product.category %></td>
									<td><%= product.market %></td>
								</tr>
							<% }) %>
						</tbody>
					</table>

			</div>
		</div>
	</div>

</div>
</body>
</html>