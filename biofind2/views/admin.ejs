<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
	<script type='text/javascript' src='/faye/client.js'></script>
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> BIO FIND</h1>
		<a href='/' class="btn btn-default">HOME</a>
		<a href="/products" class="btn btn-default">Products</a>
		<a href="/markets" class="btn btn-default">Markets</a>
	</div>

	<div class="row">

		<!-- ADD PRODUCT -->
		<div class="col-sm-6">
			<div class="well">
				<h3>Add product</h3>
				<form action="/products" method="POST" id="product">
					<div class="form-group">
						<strong>Name</strong>: <input type="text" name="name" id="name" required><br>
						<strong>Price</strong>: <input type="text" name="price" id="price" required><br>
						<strong>Category</strong>: 	<select id="category" name="category" required>
														<option value="/milk">Milk</option>
														<option value="/bread">Bread</option>
														<option value="/meat">Meat</option>
														<option value="/eggs">Eggs</option>
														<option value="/drinks">Drinks</option>
														<option value="/other">Other</option>
													</select>
						<strong>Market</strong>: 	<select id="market" name="market" required>
														<% markets.forEach(function(market) { %>
															<option value="<%= market.name %>"> <%= market.name %></option>
														<% }) %>
													</select>														
					</div>
					<button type="submit" class="btn btn-warning btn-lg">Add</button>
				</form>
			</div>
		</div>
		
	</div>

</div>
</body>
</html>